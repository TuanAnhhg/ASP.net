<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="408dp"
        android:layout_height="599dp"
        android:paddingTop="50dp"
        android:stretchColumns="*"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="4dp">

        <EditText
            android:id="@+id/editT_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="16dp" />


        <EditText
            android:id="@+id/editT_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/txtsdt"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="86dp" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Thành viên"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="153dp" />


        <TableRow android:paddingTop="20dp">

            <RadioButton
                android:id="@+id/radioB_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip"
                tools:layout_editor_absoluteX="81dp"
                tools:layout_editor_absoluteY="182dp" />

            <RadioButton
                android:id="@+id/radioB_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/thuong"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="182dp" />
        </TableRow>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Loại vé"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="244dp" />

        <TableRow android:paddingTop="20dp">

            <RadioButton
                android:id="@+id/radioB_nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/giuong"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="291dp" />

            <RadioButton
                android:id="@+id/radioB_ngoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ghe"
                tools:layout_editor_absoluteX="217dp"
                tools:layout_editor_absoluteY="290dp" />
        </TableRow>

        <CheckBox
            android:id="@+id/cb_dv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="@string/dichvu"
            tools:layout_editor_absoluteX="81dp"
            tools:layout_editor_absoluteY="349dp" />

        <TableRow android:paddingTop="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="418dp" />

            <Spinner
                android:id="@+id/spinner_tien"
                android:layout_width="142dp"
                android:layout_height="22dp"
                android:spinnerMode="dropdown"
                tools:layout_editor_absoluteX="152dp"
                tools:layout_editor_absoluteY="409dp" />
        </TableRow>

        <TableRow android:paddingTop="20dp">

            <Button
                android:id="@+id/bt_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancle"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="499dp" />

            <Button
                android:id="@+id/bt_thanhtoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="192dp"
                tools:layout_editor_absoluteY="498dp" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>